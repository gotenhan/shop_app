source 'https://rubygems.org'

gem 'rails', '3.2.8'

gem 'pg'
gem 'haml-rails'
gem 'jquery-rails'
gem 'formtastic'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'spork-rails'
  gem 'rspec-rails'
  gem 'factory_girl_rails', require:false
  gem 'capybara'
  gem 'database_cleaner'
  gem 'guard'
  gem 'guard-spork'
  gem 'guard-rspec'
  gem 'guard-bundler'
end
